@{
    ViewBag.Title = "Game List";
}

<script src="~/Scripts/knockout-3.1.0.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/KnockoutModels/GameListViewModel.js"></script>

<div class="page-header">
    <h2 class="text-center">Game List</h2>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2 class="panel-title">Register new game</h2>
            </div>

            <div class="panel-body" data-bind="with: addGameViewModel">
                @Html.Partial("_addGameView")
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Current Games</h2>
            </div>
            <div class="panel-body" data-bind="with: ganeListViewModel">
                @Html.Partial("_listGamesView")
            </div>
        </div>
    </div>

</div> 