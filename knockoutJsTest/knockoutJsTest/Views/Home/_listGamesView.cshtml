<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Genre</th>
            <th>Rating</th>
            <th>Description</th>
            <th>PPH</th>
            <th>Completed</th>
        </tr>
    </thead>

    <tbody data-bind="foreach: games">
        <tr>
            <td data-bind="text: Id"></td>
            <td data-bind="text: Name"></td>
            <td data-bind="text: Genre"></td>
            <td data-bind="text: Rating"></td>
            <td data-bind="text: Description"></td>
            <td data-bind="text: PPH"></td>
            <td data-bind="text: Completed"></td>
            <td><input type="button" class="btn btn-danger btn-xs" value=" [x] delete " data-bind="click: $parent.removeGame" /></td>
        </tr>
    </tbody>
</table>

<br />

<input type="button" class="btn btn-default" id="btnGetGames" value="Refresh" data-bind="click: getGames" /> 
